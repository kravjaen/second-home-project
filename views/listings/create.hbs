

<form action="/listings/add" method="POST" enctype="multipart/form-data" class="form-signin">
  <div class="text-center mb-4">
    <img class="mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">New listing</h1>
    <p>Create a new listing! What do you have to give away?
    </p>
  </div>

  <div class="form-label-group">
    <input name="name" type="text" id="inputName" class="form-control" placeholder="Name" required autofocus>
    <label for="inputName">Name</label>
  </div>

  <div class="form-label-group">
    <select name="listingType" class="custom-select d-block w-100 form-control" id="listing-type" required>
      <option>Offer</option>
      <option>Want</option>
    </select>
  </div>

  <div class="form-label-group">
    <select name="category" class="custom-select d-block w-100 form-control" id="category">
    </select>
  </div>
  <div class="form-label-group">
    <select name="subCategory" class="custom-select d-block w-100 form-control" id="subCategory">
    </select>
  </div>

  <div class="form-label-group">
    <input name="description" type="text" id="inputDescription" class="form-control" placeholder="Description" required>
    <label for="inputDescription">Description</label>
  </div>

  <div class="form-label-group" id="input-styling-address">

    <div id="map-example-container" class="d-none"></div>

    <input name="lat" type="text" id="input-lat" class="d-none">
    <input name="lng" type="text" id="input-lng" class="d-none">
    
    <input name="location" type="search" id="input-map" class="form-control" placeholder="Location" />
      {{!-- <label for="input-map">Location</label> --}}


  </div>



  <div class="form-label-group">
    <input type="file" id="file-input" class="form-control-file" name="image" placeholder="Image" required>
    <label for="file-input">Upload images</label>
  </div>

  <div class="mb-3">
    <label>
      <span>Changed your mind? </span>
      <a href="/listings">Go back</a>
    </label>
  </div>

  <button class="btn btn-lg btn-primary btn-block" type="submit" {{> error this}} {{> success this}}>Submit!</button>

</form>



  <script src="/javascripts/autocomplete.js"></script>